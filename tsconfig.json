{
    "compilerOptions": {
      "jsx": "react",
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",                    
      "typeRoots": ["./@types", "./node_modules/@types"],              
      "esModuleInterop": true,                                 
      "forceConsistentCasingInFileNames": true,            
      "strict": true,                                      
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
      "files": true
    }
  }
  